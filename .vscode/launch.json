  "version": "0.2.0",
  "configurations": [
    {
      "name": "mocha debugger",
      "type": "node",
      "request": "launch",
      "runtimeArgs": [
        "run-script",
        "test"
      ],
      "runtimeExecutable": "pnpm",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "sourceMaps": true,
      "cwd": "${workspaceRoot}",
      "console": "internalConsole",
      "internalConsoleOptions": "openOnSessionStart",
    },
    {
      "name": "TS Debugger",
      "type": "node",
      "request": "launch",
      "args": [
        "${workspaceRoot}/debug.ts" // entry file
      ],
      "runtimeArgs": ["--nolazy", "-r", "ts-node/register"],
      "sourceMaps": true,
      "cwd": "${workspaceRoot}",
      "console": "internalConsole",
      "internalConsoleOptions": "openOnSessionStart",
      "runtimeExecutable": "D:/03_tools/nvm/v20.9.0/node" // path of node
    }
  ]
}
